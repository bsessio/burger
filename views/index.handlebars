<h1>Burger Time</h1>


<div class="left"><h2>Available Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="burger" style="text-align: center">
<img class="burger" src="/assets/img/burger.png"></div>


<div class="right"><h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{!-- <li> --}}
        {{burger_name}}
    {{!-- </li> --}}
    {{/if}}
  {{/each}}
</ul></div>

<div class="bottom">
<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger:</label>
    <input type="text" id="bn" name="name">
  </div>
<div style="text-align: center">
  <button type="submit"><h3>Submit Order</h3></button></div>
</form></div>